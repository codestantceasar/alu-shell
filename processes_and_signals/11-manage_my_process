#!/usr/bin/env bash
# This init script manages the manage_my_process script with start, stop, and restart commands.

# shellcheck disable=SC2009

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="$(dirname "$0")/manage_my_process"

case "$1" in
    start)
        if [ -f "$PID_FILE" ]; then
            echo "manage_my_process is already running."
            exit 1
        fi
        # Start manage_my_process in the background and capture its PID
        "$SCRIPT_PATH" &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ ! -f "$PID_FILE" ]; then
            echo "PID file not found. manage_my_process is not running."
            exit 1
        fi
        # Terminate the process using the PID from the PID file
        kill "$(cat "$PID_FILE")"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
        ;;
    restart)
        if [ -f "$PID_FILE" ]; then
            kill "$(cat "$PID_FILE")"
            rm -f "$PID_FILE"
        fi
        # Restart manage_my_process and capture the new PID
        "$SCRIPT_PATH" &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

